<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ksleong.android.visitorapplication.HomeActivity">

    <ImageView
        android:id="@+id/home_image"
        android:contentDescription="@string/home_image_desc"
        android:src="@drawable/homelogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:text="@string/start_scan"
        android:id="@+id/start_scan_button"
        android:layout_gravity="center"
        android:onClick="requestForAccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="gone"
        android:text="@string/stop_scan"
        android:layout_marginTop="20dp"
        android:id="@+id/stop_scan_button"
        android:onClick="requestForAccess"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:id="@+id/home_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</LinearLayout>
